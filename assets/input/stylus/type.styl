//FONT STYLES
main
	ul
		padding-left 3rem
		margin 0
	li // Prevent styling on anchor
		line-height 2
		
h1, h2, h3, h4, h5, h6
	margin-bottom 0
	font-weight 300
	
html.wf-sourcesanspro-n4-active
	body
		font-family $fontFamily
body
	color gris-oscuro
h1
	color $cColor_h1
	font-size 3.0rem
	line-height 1.2
	font-weight 700
	font-family 'fuente-xox'
h2
	color quinary
	font-size 3.2rem
	line-height 1.25
	font-weight 700
	margin-bottom 20px
h3
	
	color $cColor_h3
	font-size 3.0rem
	line-height 1.3
	font-weight 700
h4
	
	color gris-oscuro
	font-size 2rem
	line-height 2
h5
	
	color primary
	font-size 1.8rem
	font-weight bold
	line-height 1.5
	margin-top 15px
h6
	
	color quinary
	font-size 1.5rem
	line-height 1.6

p
	font-size 1.6rem
	color gris-oscuro
	&.legals
		font-style italic
		font-size 1.2rem
p + ul:not(nav)
	padding-left ($default * 2)
	
.label--wrap
	.label
		color inherit unless @color
.label--regular
	.label
		text-decoration line-through
.label--online
	.label
		color online
		font-weight 700
		sup
			text-decoration underline
	.label--price
		font-size 1.8em
.amount
	//text-align center
	font-style normal

.amount--regular
	color trout
	font-size 100% // 1.6 * 100 1.8rem
	font-weight 400
	&.amount-linetrought
		text-decoration line-through
.amount--online
	color online
	font-size 135% //2.4rem
	font-weight 700
	
.amount--total
	color online
	font-size 2.4rem
	font-weight 700

//
// 9 9 0 p x
//
@media (min-width : 61.875em)
	h1 
		font-size 4.0rem
	h2 
		font-size 4.2rem
	h3 
		font-size 3.6rem
	h4 
		font-size 3.0rem
	h5 
		font-size 2.4rem
	h6 
		font-size 1.5rem