.why
	padding $default
	border-radius $dBorderRadious
	margin $default 0
	a
		text-decoration none
	h4
		margin 12px
		line-height 34px
		color grisoscuro
	.flex--wrap
		flex-direction row
		pointer-events none
.square
	border gris-oscuro
	border-radius $dBorderRadious
	background-color opacidad
	margin-bottom $default
	text-align center
	img
		width 50%
		display inline-block
	span
		font-size 60%
		color gris-oscuro
		display inline-block
		font-weight bold
.iconos
	width 20%
/**
	M I N - W I D T H : 768px equal Tablet portrait
**/
@media (min-width : 48.000em)
	.why
		max-width 30rem
		margin 0 auto
		padding 0
		
		.square span
			font-size 50%
	
	.iconos
		width 100%
/**
	M I N - W I D T H : 1025px equal Tablet lanscape to Desktop
**/
@media (min-width : 64.063em)
	//
	// 	W H Y
	//
	.why
		
		.square span
			font-size 80%