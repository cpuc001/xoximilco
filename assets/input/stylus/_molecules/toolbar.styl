.badge
	background-color blanco
	border-radius 50%
	color #491149
	display block
	font-size 95%
	height 20px
	line-height 20px
	overflow hidden
	position absolute
	//right -7px
	text-align center
	//top -5px
	width 20px
			
@media (min-width : 64.063em)
	.toolbar
		z-index 20
		width 100%
		height 2.500em
		position relatives
		padding $default
		background-color sixth
		color rgb(255, 0, 153, 0.42)
		z-index 110
		
		.dropdown-menu
			background-color quinary
			color blanco
		
		ul
			li
				position relative
				cursor pointer
				&:nth-of-type(2)
				&:nth-of-type(3)
					display none
		
		.btn
			color blanco
		
		.badge
			top -5px
			right -7px
			
			

		