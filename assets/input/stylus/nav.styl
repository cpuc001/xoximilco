/**
	M I N - W I D T H : 1025px equal Tablet lanscape to Desktop
**/
@media (min-width : 64.063em)
	//
	// N A V  P R I M A R Y
	//
	.nav-primary
		background primary
		> li
			//border 0 none
			&:hover
			&:focus
			&.current
				background-color quinary
			height $dHeight
			&:first-child
				color sixth
				background-color sixth
				flex-basis 33%
				border 0 none
				a
					font-size 3rem
					letter-spacing 0.2em
					font-weight 700
					color blanco
				&:after
					content '\e029'
					font-family 'iconexx'
					font-size 6rem
					position absolute
					right -25px
					top 0
					z-index 10
					line-height 6rem
			&:nth-of-type(2)
				padding-left 1rem
				padding-right 1.2rem
				border-left 0 none
					
			a
				font-size 1.6rem
				color blanco
			> a
				padding 0 $default
			
			&:last-child
				flex-basis 30%
				border 0 none
		.dropdown-menu
			margin-top 0
			background-color darken(primary,10%)
			min-width 100%
			li
				&:hover
				&:focus
				&.current
					background-color lightness(quinary, 50%)
			a
				color blanco