//
// N A V . S T Y L
// General styles for navigations on site
//
nav,
.nav
	position relative
	ul,ol
		list-style none
		float left
		margin 0
		padding 0
	li
		list-style-type none
		float left
	a
		text-decoration none
		color inherit
	span
		text-decoration none
	img
		display inline-block
		float left

.nav--inline
	li
		margin-right $default
		color blanco

.nav-primary
	background-color senary
	display flex
	width 100%
	.dropdown
		&:hover
		&:focus
			.dropdown-menu
				display block
				opacity 1
	> li
		height 3.125em
		//width calc(90% / 3)
		border-right 1px solid twentieth
		//flex-basis 30%
		flex 1
		align-self center
		flex-wrap nowrap
		position relative
		margin 0

		> a
			display table
			font-size 1.4rem
			height 100%
			text-align center
			white-space pre-wrap
			width 100%
			word-break normal
			flex-grow 1
			color blanco
			padding 0 ($default / 2)
			span
				vertical-align middle
				display table-cell
		&:last-child
			//flex-basis 18%
			border 0 none
			color $cColor_MainNav

.toolbar
	.nav--item
		cursor pointer
		
.nav--block
	width 100%
	li
		width 100%
		float left
		&:last-child
			border 0 none
			margin-bottom $default

		li
			//border-bottom 1px dotted $bColor_mainNav
			width 100%
			color inherit
			padding-left 2em
	.title
		//text-transform uppercase
		//border-bottom 1px solid $bColor_mainNav
		display block
		color inherit
		text-transform uppercase
		margin-bottom $default
		&:last-child
			border 0 none

			
.nav--item
	padding $default
	display inline-block
	float left
	a
		text-decoration none
		color inherit

