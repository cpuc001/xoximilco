@import 'nib'
@import 'vars'

@media (min-width : 48.000em)
	//
	// S L I D E R  H O M E
	//
	.block--hero
		&.home
			padding-bottom 111px
	.parks--logo
		flex-basis 12em
	
	.header--item
		width 25%
		&:first-child
			width 25%
	.nav-primary
		> li
			> a
				font-size 1.6rem
	.flex--wrap
		flex-direction row
	.why
		max-width 30rem
		margin 0 auto
		padding 0
		
		.square span
			font-size 50%
	//
	// B O O K I N G
	//
	.booking
		max-width: 990px
		margin 0 auto
		position absolute
		left 0
		right 0
		bottom 28px
		z-index 50

		&.booking--horizontal
			//padding $default 0
			box-shadow 0 0 15px grayShadow
			&:focus
			&:hover
				box-shadow 0 30px 15px -20px grayShadow
		
		>.flex--wrap[data-items="2"]
			padding-bottom 0
			
		.nav-tabs
			li
				width 100%
				
				&.active
					&:after
						border-top 10px solid transparent
						border-right 15px solid blanco
						border-bottom 10px solid transparent
						top 0
						left auto
		
		.tab-content
			.flex--wrap
				flex-direction row
				.flex--item
					flex-basis 33.33%
			>.tab-pane
				display none
				> .flex--wrap
					margin-top 0


		select
		input[type="text"]
			height 2.250em
			font-size 1.6rem
	
	//
	// M I X E D  P R O D U C T S
	//
	.block--mixed-item
		width 49%
		&:first-child
			margin-right 1%
	
	//
	// P A C K A G E S
	//
	.item__package
		.flex--wrap
			flex-direction row
		.flex--item
			align-self flex-start
			&:nth-of-type(1n)
				order 2
			&:nth-of-type(2n)
				order 1
	
		.item__package-header
			p + p
				display block

@media (min-width : 61.875em)
	.button
		width auto
	.button--group
		margin-bottom $default
		position relative
		width 100%
		float left
		margin-bottom $default
		.button
			width 48%
			margin-bottom 0			
			// &:first-child
			// 	margin-right 2%
		&.button--group-nav
			.button
				width auto
		




	


