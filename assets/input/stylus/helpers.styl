iframe
	vertical-align top
img
	display block
a[href^="#"]
	color inherit
//HELPERS

.icon--bullet
	display inline
	margin-right 12px
  
.no-margin
	margin 0
.no-padding
	padding 0
.hidden
	display none

.affix
	position fixed !important
	top 10px
.affix-bottom
	top auto
	bottom 1200px
.img--responsive
	width 100%
	height auto
	display block //No whitespace below
.backdrop
	height 113px
	display block
.lazy
	position relative
	display block
	img
		position absolute
		top 0
		left 0
	&:before
		content ''
		display block
.thumb
	width 100%
	//margin $default $default $default 0
	background-color gris
	height 100%

.text--align-center
	text-align center
.text--align-right
	text-align right
.text--align-left
	text-align left

.flex--wrap
	display flex
	flex-wrap wrap
	flex-direction column
	//justify-content space-between
	align-content stretch
	align-items stretch
	flex 1
	justify-content space-between
	.flex--item
		//flex-grow 1
		//padding 0 $default
		flex 1
		//height 100%
		//align-self center
		&.square
			padding $default 0
			
	&[data-items="2"]
		.flex--item
			flex-basis 50%
			//max-width 50%
	&[data-items="3"]
		.flex--item
			flex-basis 33.33%
			//max-width 33.33%
			&.square
				max-width 31.33%
	&[data-items="4"]
		.flex--item
			flex-basis 25%
			//max-width 25%
	&[data-items="5"]
		.flex--item
			flex-basis 20%
			//max-width 20%
	&[data-items="6"]
		.flex--item
			flex-basis 15%
			//max-width 15%
	
[data-type="table"]
	.flex--wrap
		flex-direction row
	div
		padding $default 0
	header
		background-color $bColor_tableHeader
		padding-top $default
		padding-bottom $default
		color $cColor_tableHeader
		div
			border-left $dBorder
			border-color $cColor_tableHeader
			&:first-child
				border 0 none
			&:nth-of-type(3n)
				display none
	.wrapping
		> .flex--wrap
			&:nth-of-type(odd)
				background-color porcelain
			div
				border-left $dBorder
				&:first-child
					border-left 0 none
			
				&:nth-of-type(3n)
					display none
			

.attractions--thumb
	width 100%
	height 250px
	background-color alto

.block--hero
	.slider--button
		width 2em
		height 2em
		position absolute
		bottom 0
		top 3em
		margin auto
		font-size 4rem
		color blanco
		display none
		&.slider--button_left
			left $default
		
		&.slider--button_right
			right $default
	
	.pagination
		max-width 100%
		margin 0 auto
		position absolute
		bottom 1rem
		right 0
		left 0
		z-index 10
		text-align center
	.pagination--item
		border-radius 50%
		width 2rem
		height 2rem
		background-color blanco
		transition background-color 0.500s ease
		margin-right $default
		display inline-block

.caret
	display inline-block
	width 0
	height 0
	margin-left 2px
	vertical-align middle
	border-top 4px dashed
	border-top 4px solid\9
	border-right 4px solid transparent
	border-left 4px solid transparent

.accordion + .button
	margin-bottom $default
	width auto

.go-top
	margin-top $default
	i
		font-size 2rem

.embed-responsive
	position relative
	padding-bottom 56.25%
	padding-top 35px
	height 0
	overflow hidden

	iframe
	embed
	object
	video
		border 0 none
		height 100%
		left 0
		position absolute !important
		top 0
		width 100%
		
.embed-responsive-4by3
	padding-bottom 75%

//
// L O A D I N G  D O T S
//
// .loading_dots
// 	display block
// 	text-align center		
.loading_dots i
	background-color transparent
	border-radius 50%
	box-shadow inset 0 0 1px rgba(0,0,0,0.3)
	display inline-block
	height 0.6em
	width 0.6em
	animation loading_dotss 0.8s linear infinite
	margin-right 5px
	will-change contents
	
	&:nth-child(2)
		animation-delay 0.2s
	&:nth-child(3)
		animation-delay 0.2s

.vid
	max-width 100%
	position absolute
	z-index 100
	left 0
	right 0
	margin auto
	bottom 0
	top 0
	transform translate3d(0,0,0)
	background-color rgba(0,0,0,0.7)

	&.embed-responsive
		max-width 990px
		margin 0 auto

@keyframes loading_dotss
	0%
		background transparent

	50%
		background #E4E4E4
	
	100%
		background transparent

div.jqi
	.jqiclose
		background-color quinary
//
//	M I N - W I D T H :  7 6 8 p x
//
@media (min-width : 48.000em)
	.flex--wrap
		flex-direction row
//
//	M I N - W I D T H : 990px
//
@media (min-width : 61.875em)
	.flex--wrap
		flex-direction row
		
	[data-type="table"]
		header
			div
				&:nth-of-type(3n)
					display block
		.wrapping
			> .flex--wrap
				div
					&:nth-of-type(3n)
						display block
