.button--group
	margin-bottom $default
	position relative
	width 100%
	.button
		width 100%
		//float left
		margin-bottom $default

	&.button--group-nav
		.button
			width 100%

	&.button--group-slider
		.button
			width 100%
			float left
			border-radius 0 0 $dBorderRadious $dBorderRadious
			margin 0

.button--square
	width 100%
	height 100%
	line-height 50%
	color blanco
	display block
	line-height 23px

.button-icon
	color blanco
	i
		color inherit
		display inline-block
		font-size 2.5rem
			

input[type=button],
input[type=submit]
	{button}
	@extend .button--block

aside
	.button--block
		width 100%

