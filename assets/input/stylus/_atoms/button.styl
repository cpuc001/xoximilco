@media (min-width : 61.875em)
	.button--block
		width auto
	.button--group
		margin-bottom $default
		position relative
		width 100%
		float left
		margin-bottom $default
		.button
			width 48%
			margin-bottom 0			
			// &:first-child
			// 	margin-right 2%
		&.button--group-nav
			.button
				width auto
		